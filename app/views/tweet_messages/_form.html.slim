= form_with(model: @tweet_message, local: true, html: { }) do |f|
  - if @tweet_message.errors.any?
    div#error_explanation.alert.alert-danger
      h2
        = "#{pluralize(@tweet_message.errors.count, 'error')} prohibited this tweet message from being saved"
        ul
          - @tweet_message.errors.full_messages.each do |message|
            li = message

  div.form-field
    = f.label :message, class: 'required'
    = f.text_field :message, class: 'form-control'

  div.form-field
    = f.label :threshold, class: 'required'
    = f.number_field :threshold, class: 'form-control'

  div.form-field
    = f.label :frequency, class: 'required'
    = f.select :frequency, TweetMessage.frequencies.to_a.map { |s| [t("activerecord.enum.tweet_message.frequency.#{s[0]}"), s[0]] },
            {}, class: 'form-control'

  div
    = f.submit class: 'btn btn-default'